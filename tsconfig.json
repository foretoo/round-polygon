{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext","DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "ts-node": {
    "transpileOnly": true
  },
  "swc": true
}